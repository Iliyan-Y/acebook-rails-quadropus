<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  
    <%= link_to image_tag("logo.png", alt: "Logo", class: "logo"), root_url %>
    <p id=”notice”><%= notice %></p>
        <% if current_user %>
          <%= link_to 'Log Out', logout_path, class: 'button' %>
          <%= link_to "#{current_user.username}'s profile", profile_path, class: 'button', id: "My Profile" %>
        <% else %>
          <%= link_to 'Sign Up', signup_path, class: 'button' %> or 
          <%= link_to 'Log In', login_path, class: 'button' %>
        <% end %>
    <%= yield %>

    <%= image_tag('konami-octopus.png', id: 'konami-octopus', style: 'visibility: hidden') %>
    <%= audio_tag('https://raw.githubusercontent.com/fraserbrookhouse/acebook-rails-quadropus/master/app/assets/audio/ghosts03.mp3', id: 'konami-ghosts') %>

  </body>
</html>
