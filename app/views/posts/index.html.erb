<% @posts.each do |post| %>
  <p><%= post.message %></p>
  <%=post.created_at.to_formatted_s(:long)%>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Delete', post_path(post), :method => :delete, :confirm => "Are you sure?" %>
<% end %>
<br>
<%= link_to new_post_path do %>
  New post
<% end %>
